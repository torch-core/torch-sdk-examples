{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@torch/sdk": ["packages/torch-sdk/src"]
    },
    "isolatedModules": false
  },
  "include": ["backend-examples", "tests"],
  "exclude": ["node_modules", "dist"]
}
